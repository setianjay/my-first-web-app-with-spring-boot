<html>
    <head>
        <title>Login Page</title>
    </head>
    <body>
        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
            <h2>Login Form</h2>
            <form method="post">
                <div style="margin-bottom:22px;">
                    <label style="display:block; margin-bottom: 6px; font-size: 12px;">Username</label>
                    <input type="text" name="username" style="padding: 6px 6px; border: 1px solid #555; border-radius: 4px;"/>
                </div>
                <div style="margin-bottom:22px;">
                    <label style="display:block; margin-bottom: 6px; font-size: 12px;">Password</label>
                    <input type="password" name"password" style="padding: 6px 6px; border: 1px solid #555; border-radius: 4px;"/>
                </div>
                <button type="submit" style="background-color:#059862; padding: 6px 16px; border: none; color: white; border-radius: 6px; font-weight: 600; text-transform: uppercase; cursor: pointer;">Login</button>
            </form>
        </div>
    </body>
</html>